---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Worker Registration - Werving Index">
  <!-- Background gradient -->
  <div class="fixed inset-0 bg-gradient-to-br from-[#F8F9FA] via-[#95E388]/10 to-yellow-50/30 -z-10"></div>
  
  <!-- Header with Logo and Back Button -->
  <header class="w-full py-8 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto flex items-center justify-between relative z-50">
    <div class="flex items-center">
      <a href="/" class="hover:opacity-80 transition-opacity">
        <div class="flex items-center gap-3">
          <div class="relative">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" class="drop-shadow-sm">
              <circle cx="24" cy="24" r="22" fill="#95E388" opacity="0.3"></circle>
              <circle cx="24" cy="24" r="18" fill="#1A2E22"></circle>
              <text x="24" y="32" text-anchor="middle" fill="white" font-size="24" font-weight="700" font-family="Inter, system-ui, sans-serif">W</text>
              <path d="M24 12 L28 16 L26 16 L26 20 L22 20 L22 16 L20 16 Z" fill="#95E388"></path>
              <circle cx="36" cy="12" r="4" fill="#FFC107"></circle>
            </svg>
          </div>
          <div class="flex flex-col gap-1">
            <span class="text-xl font-bold tracking-tight text-[#1A2E22] leading-none">Werving Index</span>
            <span class="text-xs text-[#64748B] uppercase tracking-wider">The Right People For The Right Job</span>
          </div>
        </div>
      </a>
    </div>
    
    <div class="flex items-center gap-4">
      <a href="/" class="inline-flex items-center justify-center px-5 py-2.5 border border-[#1A2E22]/10 text-sm font-semibold rounded-xl text-[#1A2E22] bg-white hover:bg-gray-50 transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#95E388] shadow-sm">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Home
      </a>
    </div>
  </header>
  
  <!-- Tally Form Embed - Inline on Page -->
  <main class="w-full">
    <iframe 
      data-tally-src="https://tally.so/r/b5ebeg?transparentBackground=1&hideTitle=1" 
      loading="lazy"
      width="100%" 
      height="100%" 
      frameborder="0" 
      marginheight="0" 
      marginwidth="0" 
      title="Worker Registration Form"
      style="position: absolute; top: 0; right: 0; bottom: 0; left: 0; border: 0;"
    ></iframe>
  </main>
</BaseLayout>

<script async src="https://tally.so/widgets/embed.js"></script>

<style>
  html, body {
    margin: 0;
    height: 100%;
    overflow: hidden;
  }
</style>
