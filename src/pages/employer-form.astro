---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Employer Registration - Werving Index">
  <!-- Background gradient -->
  <div class="fixed inset-0 bg-gradient-to-br from-[#F8F9FA] via-[#95E388]/10 to-yellow-50/30 -z-10"></div>
  
  <!-- Header with Logo and Back Button -->
  <header class="w-full py-4 md:py-8 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto flex items-center justify-between relative z-50 bg-transparent">
    <div class="flex items-center">
      <a href="/" class="hover:opacity-80 transition-opacity">
        <div class="flex items-center gap-2 md:gap-3">
          <div class="relative">
            <svg width="40" height="40" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" class="drop-shadow-sm md:w-12 md:h-12">
              <circle cx="24" cy="24" r="22" fill="#95E388" opacity="0.3"></circle>
              <circle cx="24" cy="24" r="18" fill="#1A2E22"></circle>
              <text x="24" y="32" text-anchor="middle" fill="white" font-size="24" font-weight="700" font-family="Inter, system-ui, sans-serif">W</text>
              <path d="M24 12 L28 16 L26 16 L26 20 L22 20 L22 16 L20 16 Z" fill="#95E388"></path>
              <circle cx="36" cy="12" r="4" fill="#FFC107"></circle>
            </svg>
          </div>
          <div class="flex flex-col gap-0.5 md:gap-1">
            <span class="text-base md:text-xl font-bold tracking-tight text-[#1A2E22] leading-none">Werving Index</span>
            <span class="text-[10px] md:text-xs text-[#64748B] uppercase tracking-wider hidden sm:block">The Right People For The Right Job</span>
          </div>
        </div>
      </a>
    </div>
    
    <div class="flex items-center gap-2 md:gap-4">
      <a href="/" class="inline-flex items-center justify-center px-3 py-2 md:px-5 md:py-2.5 border border-[#1A2E22]/10 text-xs md:text-sm font-semibold rounded-lg md:rounded-xl text-[#1A2E22] bg-white hover:bg-gray-50 transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#95E388] shadow-sm">
        <svg class="w-3 h-3 md:w-4 md:h-4 mr-1 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span class="hidden sm:inline">Back to Home</span>
        <span class="sm:hidden">Back</span>
      </a>
    </div>
  </header>
  
  <!-- Tally Form Embed -->
  <main class="w-full" style="height: calc(100vh - 72px); margin-top: 0;">
    <iframe 
      data-tally-src="https://tally.so/r/EkljvN?transparentBackground=1" 
      loading="lazy"
      width="100%" 
      height="100%" 
      frameborder="0" 
      marginheight="0" 
      marginwidth="0" 
      title="Employer Registration Form"
      style="border: 0; display: block;"
    ></iframe>
  </main>
</BaseLayout>

<script async src="https://tally.so/widgets/embed.js"></script>

<style>
  body {
    margin: 0;
    overflow: hidden;
  }
  
  @media (min-width: 768px) {
    main {
      height: calc(100vh - 96px) !important;
    }
  }
</style>
