---
import BaseLayout from '../layouts/BaseLayout.astro';
import FormHeader from '../components/FormHeader.astro';
---

<BaseLayout 
  title="Hire Workers in Lancashire - Employer Registration | Werving Index"
  description="Find ready-to-work staff in Lancashire instantly. Hire warehouse workers, forklift operators, and general laborers in Preston, Blackpool, and across Lancashire. No waiting."
  keywords="hire workers Lancashire, find staff Lancashire, recruitment Lancashire, warehouse staff Lancashire, forklift operators Lancashire, Preston recruitment, Blackpool recruitment, quick hiring"
  ogType="website"
>
  <!-- Background gradient -->
  <div class="fixed inset-0 bg-gradient-to-br from-[#F8F9FA] via-[#95E388]/10 to-yellow-50/30 -z-10"></div>
  
  <FormHeader />
  
  <!-- Tally Form Embed -->
  <main class="w-full" style="height: calc(100vh - 72px); margin-top: 0;">
    <iframe 
      data-tally-src="https://tally.so/r/EkljvN?transparentBackground=1" 
      width="100%" 
      height="100%" 
      frameborder="0" 
      marginheight="0" 
      marginwidth="0" 
      title="Employer Registration Form"
      style="border: 0; display: block;"
    ></iframe>
  </main>
</BaseLayout>

<script async src="https://tally.so/widgets/embed.js" data-astro-rerun></script>

<style>
  body {
    margin: 0;
    overflow: hidden;
  }
  
  @media (min-width: 768px) {
    main {
      height: calc(100vh - 96px) !important;
    }
  }
</style>
