---
interface Props {
  size?: number;
  class?: string;
}

const { size = 48, class: className = "" } = Astro.props;
---
<div class:list={["flex items-center gap-2 md:gap-3", className]}>
  <!-- Logo Icon -->
  <div class="relative shrink-0">
    <!-- Outer green circle -->
    <svg width="40" height="40" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" class="drop-shadow-sm md:w-12 md:h-12">
      <!-- Outer ring -->
      <circle cx="24" cy="24" r="22" fill="#95E388" opacity="0.3"></circle>
      <circle cx="24" cy="24" r="18" fill="#1A2E22"></circle>
      <!-- W letter -->
      <text x="24" y="32" text-anchor="middle" fill="white" font-size="24" font-weight="700" font-family="Inter, system-ui, sans-serif">W</text>
      <!-- Arrow up -->
      <path d="M24 12 L28 16 L26 16 L26 20 L22 20 L22 16 L20 16 Z" fill="#95E388"></path>
      <!-- Yellow dot accent -->
      <circle cx="36" cy="12" r="4" fill="#FFC107"></circle>
    </svg>
  </div>
  <div class="flex flex-col gap-0.5 md:gap-1">
    <span class="text-base md:text-xl font-bold tracking-tight text-[#1A2E22] leading-none">Werving Index</span>
    <span class="text-[10px] md:text-xs text-[#64748B] uppercase tracking-wider hidden sm:block">The Right People For The Right Job</span>
  </div>
</div>
