<section class="py-24 bg-white/50 border-y border-[#E2E8F0]/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-3xl sm:text-4xl font-bold text-[#1A2E22] mb-4">How it works</h2>
        <p class="text-xl text-[#64748B] font-light">From signup to hired in minutes.</p>
      </div>
  
      <div class="relative">
        <!-- Connecting Line (Desktop) -->
        <div class="hidden md:block absolute top-10 left-0 w-full h-0.5 bg-[#E2E8F0]/50 -z-10"></div>
        <!-- Connecting Line (Mobile) -->
        <div class="md:hidden absolute top-0 left-10 h-full w-0.5 bg-[#E2E8F0]/50 -z-10"></div>
  
        <div class="grid grid-cols-1 md:grid-cols-5 gap-12 md:gap-4">
          <div class="relative flex md:flex-col items-start md:items-center gap-6 md:gap-6 group">
            <!-- Icon Circle -->
            <div class="flex-shrink-0 w-20 h-20 rounded-2xl bg-white border border-[#E2E8F0] flex items-center justify-center text-2xl font-bold text-[#64748B] group-hover:border-[#95E388] group-hover:text-[#1A2E22] group-hover:bg-[#95E388] transition-all duration-300 shadow-sm z-10">
              1
            </div>
            <!-- Content -->
            <div class="pt-2 md:pt-0 md:text-center">
              <h3 class="text-lg font-bold text-[#1A2E22] mb-2">Join the Index</h3>
              <p class="text-sm text-[#64748B] leading-relaxed">60 seconds. Name, email, location. No CV.</p>
            </div>
          </div>
  
          <div class="relative flex md:flex-col items-start md:items-center gap-6 md:gap-6 group">
            <!-- Icon Circle -->
